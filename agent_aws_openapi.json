{
    "openapi": "3.0.0",
    "info": {
        "title": "Agent-Finance",
        "version": "1.0.0",
        "description": "Agent Finance is an automated, AI-powered agent that helps a portfolio owner with knowledge of public financial information about companies and the investor's existing investment portfolio and then provides financial investment advice accordingly."
    },
    "paths": {
        "/get_investment_research": {
            "get": {
                "summary": "Financial investment research",
                "description": "Get public financial information of a company to answer a question. The API takes in the query then returns the corresponding financial public information",
                "operationId": "financialInformation",
                "parameters": [
                    {
                        "name": "query",
                        "in": "path",
                        "description": "query",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],                
                "responses": {
                    "200": {
                        "description": "Public financial information of the company",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "answer": {
                                            "type": "string",
                                            "description": "Public financial information of the company."
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
        ,
        "/get_existing_portfolio": {
        "get": {
            "summary": "Get existing investment portfolio of the user from the tools module with the query",
            "description": "Get existing investment portfolio of the user from the tools module with the query to check diversification. The API takes in the username and returns the user's investment portfolio along with the percentage of holdings",
            "operationId": "portfolio",
            "parameters": [
                {
                    "name": "username",
                    "in": "path",
                    "description": "username",
                    "required": true,
                    "schema": {
                        "type": "string"
                    }
                }
            ],
            "responses": {
                "200": {
                    "description": "Existing portfolio of the user",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "code": {
                                        "type": "string",
                                        "description": "Investment Portfolio"
                                    }
                                }
                            }
                        }
                    }
                }
            }
            }
        }  
    }
}